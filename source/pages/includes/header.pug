- const MENUS = [{ text: 'Главная' }, { text: 'Каталог' }, { text: 'Доставка' }, { text: 'О нас' },]
- const USERS = [{ icon: 'login', func: 'Войти'}, { icon: 'cart', func: 'Корзина' },]

header.header
  .header__wrapper
    h1.visually-hidden Drink2Go — это интернет-магазин по продаже кофейных напитков. Удобная сортировка по странам произрастания зерна и концентрации молока поможет выбрать идеальный напиток. Количество позиций для заказа не ограничено.
    .header__logotype
      a(href="#")
        svg(width='170' height='37' role="img" aria-labelledby="logo-header-label" aria-description="Drink 2 Go")
          title#logo-header-label=projectName
          use(href='img/sprite_auto.svg#logotype-mobile').for-mobile
          use(href='img/sprite_auto.svg#logotype-tablet').for-tablet
          use(href='img/sprite_auto.svg#logotype-desktop').for-desktop
      p Интернет-магазин 
        br 
        | кофейных напитков
    nav.header__main.header__main--closed.header__main--nojs
      button(type="button").for-mobile
      each menu in MENUS
        a(href='#').header__submenu
          p=menu.text
    .header__user
      each user in USERS
        button(type="button").header__subuser
          svg(width='18' height='18' aria-hidden='true' dominant-baseline='central')
            use(href=`img/sprite_auto.svg#icon-${user.icon}`)
          p=user.func
